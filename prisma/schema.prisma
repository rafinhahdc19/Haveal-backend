datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model adms {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
}

model produtos {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  nome    String   
  desc    String
  imgurl  String
  value   String
  data    DateTime
  slug    String   @unique
}

model orders {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  nome    String   
  email   String 
  contato String    
  status  String
  statusInterno  String
  data    DateTime
  itens   Json[]
  estado  String  
  cidade  String 
  rua     String 
  cep     String  
  bairro  String   
  numero  String 
  complemento  String 
  cpf     String 
  value   String
  rastreio String?
  slug    String   @unique
  paytoken String   @unique
}

model users {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  nome    String   
  email   String   @unique
  senha   String   
  status  String
  data    DateTime
  VSlug   String   @unique
  cpf     String?
}